{% extends 'base.html.twig' %}

{% block title %}{{ character.name }}{% endblock %}

{% block body %}
    <h1>{{ character.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Kind</th>
                <td>{{ character.kind }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ character.surname }}</td>
            </tr>
            <tr>
                <th>Caste</th>
                <td>{{ character.caste }}</td>
            </tr>
            <tr>
                <th>Knowledge</th>
                <td>{{ character.knowledge }}</td>
            </tr>
            <tr>
                <th>Intelligence</th>
                <td>{{ character.intelligence }}</td>
            </tr>
            <tr>
                <th>Life</th>
                <td>{{ character.life }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ character.image }}</td>
            </tr>
            <tr>
                <th>Creation</th>
                <td>{{ character.creation ? character.creation|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Modification</th>
                <td>{{ character.modification ? character.modification|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="container-fluid py-1">
        <div class="row justify-content-end">
            <div class="col-auto">
                <a href="{{ path('character_html_index') }}" class="btn btn-secondary mx-1">Retourner Ã  la liste</a>
                <a href="{{ path('character_html_edit', {'id': character.id}) }}" class="btn btn-primary mx-1">Modifier</a>
            </div>
        </div>
    </div>

    <div class="container-fluid py-1">
        <div class="row justify-content-end">
            <div class="col-auto">
                {{ include('character_html/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}
